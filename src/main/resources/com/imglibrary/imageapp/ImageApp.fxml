<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.imglibrary.imageapp.ImageController">
    <center>
        <ImageView fx:id="imageView" fitWidth="400" preserveRatio="true"/>
    </center>
    <bottom>
        <VBox spacing="10" style="-fx-padding: 10; -fx-alignment: center;">
            <Button text="Choisir une image" onAction="#onChooseImage"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8px; -fx-border-radius: 5px;"/>
            <HBox spacing="10" alignment="center">
                <Button text="Rotate 90°" onAction="#rotation_90"
                        style="-fx-background-color: #008CBA; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8px; -fx-border-radius: 5px;"/>
                <Button text="Rotate 180°" onAction="#rotation_180"
                        style="-fx-background-color: #008CBA; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8px; -fx-border-radius: 5px;"/>
                <Button text="Rotate 270°" onAction="#rotation_270"
                        style="-fx-background-color: #008CBA; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8px; -fx-border-radius: 5px;"/>
            </HBox>
            <HBox spacing="10" alignment="center">
                <Button text="Symétrie Horizontale" onAction="#HorizontalSymetry"
                        style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8px; -fx-border-radius: 5px;"/>
                <Button text="Symétrie Verticale" onAction="#VerticalSymetry"
                        style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8px; -fx-border-radius: 5px;"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>