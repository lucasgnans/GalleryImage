<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.imglibrary.imageapp.ImageController">
    <center>
        <ImageView fx:id="imageView" fitWidth="400" preserveRatio="true"/>
    </center>
    <bottom>
        <VBox spacing="10" style="-fx-padding: 10;">
            <Button text="Choisir une image" onAction="#onChooseImage"/>
        </VBox>
    </bottom>
</BorderPane>
